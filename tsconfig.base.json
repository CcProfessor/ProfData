// tsconfig.base.json (na raiz)
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@core/*": ["core/*"],
      "@domain/*": ["core/rules/domain/*"]
    }
  }
}
