{
  "name": "Professor",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "core",
    "player",
    "server",
    "target"
  ],
  "scripts": {
    "dev:server": "nodemon --watch server --exec ts-node server/src/main.ts",
    "dev:client": "cd client && npm start",
    "dev:core": "ts-node core/src/index.ts",
    "dev:prisma": "prisma generate && prisma migrate dev",
    "build": "tsc -b",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "@types/node": "^20.11.17"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "@prisma/client": "^5.10.2",
    "prisma": "^5.10.2",
    "mysql2": "^3.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
