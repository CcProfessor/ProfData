generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String   @id @default(uuid())
  username String
  password String
  access   Int

  targets  Target[]
  ships    Ship[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Target {
  id        String   @id @default(uuid())
  page      Int      @default(0)
  status    Int      @default(0)
  playerId  String

  name      String?
  info      String?
  link      String?
  details   String?

  player    Player   @relation(fields: [playerId], references: [id])
  codes     Code[]

  request   RequestInfo?
  client    ClientInfo?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Code {
  id        String   @id @default(uuid())
  targetId  String
  status    Int      @default(0)
  codev     String?
  value     String?

  target    Target   @relation(fields: [targetId], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Ship {
  id        String   @id @default(uuid())
  playerId  String
  number    String
  local     String
  name      String
  data      String

  player    Player   @relation(fields: [playerId], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model RequestInfo {
  id          String   @id @default(uuid())
  ip          String   // IP de origem
  port        Int?     // Porta de origem
  tlsVersion  String?  // Versão TLS (ex: TLS1.3)
  transport   String   // Protocolo de transporte (ex: TCP, QUIC/UDP)
  origin      String?  // Header Origin
  connection  String?  // Header Connection (ex: keep-alive, close)
  userAgent   String?  // Header User-Agent
  referer     String?  // Header Referer
  host        String?  // Header Host
  createdAt   DateTime @default(now())

  target      Target   @relation(fields: [targetId], references: [id])
  targetId    String   @unique
}

model ClientInfo {
  id          String   @id @default(uuid())
  screenWidth Int?     // Largura da tela
  screenHeight Int?    // Altura da tela
  timezone    String?  // Timezone do navegador
  language    String?  // Linguagem principal (ex: pt-BR)
  languages   String[] // Lista de linguagens do navegador
  platform    String?  // Plataforma (ex: Win32, Linux x86_64, Android)
  deviceMemory Float?  // Memória RAM estimada (em GB, se disponível)
  hardwareConcurrency Int? // Nº de núcleos de CPU
  createdAt   DateTime @default(now())

  target      Target   @relation(fields: [targetId], references: [id])
  targetId    String   @unique
}